<main>
    {{#if hasError}}
    <p>{{error}}</p>
    {{/if}}
    <form action="/login" method="POST" id="myForm">
        <label for="username">
            Username:
            <input type="text" name="username" id="username"/>
        </label>
        <label for="password">
            Password:
            <input type="text" name="password" id="password"/>
        </label>
        <button type="submit">Submit</button>
    </form>
</main>
